---
- name: Install web server
  hosts: nodes 
  tasks:
  - name: Install package
    yum:
      name: httpd
      state: latest
  - name: Start and enable service
    service:
     name: httpd
     state: started
     enabled: true
  - name: Create index.html
    copy:
      dest: /var/www/html/index.html
      content: Welcome to my web server
  - name: Open firewall ports
    firewalld:
      service: http
      permanent: yes
      immediate: true
      state: enabled

